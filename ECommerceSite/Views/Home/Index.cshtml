@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Goodies Crate</h1>
</div>
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/pics/Crate_Tier_3.png" class="d-block w-50" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h2>Goodie Crate</h2>
        <h3>9.99</h3>
        <p>Our Goodie Crate's contain an fun assortment of mystery products.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/pics/Crate_Tier_2.png" class="d-block w-50" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h2>Deluxe Crate</h2>
        <h3>14.99</h3>
        <p>If you love goodie crate, try an upgrade!</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/pics/Crate_Tier_1.png" class="d-block w-50" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h2>Ultimate Crate</h2>
        <h3>19.99</h3>
        <p>This crate includes everything, and then some!</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>